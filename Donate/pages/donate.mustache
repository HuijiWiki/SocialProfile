<div class="title">
    <div class="site-avatar">{{{siteAvatar}}}
        <div class="site-name">{{siteName}}</div>
        <div class="site-desc well">{{siteDescription}}</div>
    </div>
    <div class="clear"></div>
    <div class="donate-bottom-wrapper">
    <h2 class="month-total">
        当月目标金额: {{goalDonate}}元
        <a class="secondary icon-info" href="http://www.huiji.wiki/wiki/FAQ:%E6%8D%90%E8%B5%A0%E6%98%AF%E4%BB%80%E4%B9%88%EF%BC%8C%E4%B8%BA%E4%BB%80%E4%B9%88%E8%A6%81%E6%8D%90%E8%B5%A0%EF%BC%9F"> 为什么要加油</a>
    </h2>
    <div class="have-reached">
        <span>已完成:</span>
        <div id="points-level" class="progress">
            <div class="progress-bar progress-bar-striped active" role="progressbar" aria-valuemin="0" aria-valuemax="100" style="width: {{percentage}}%">
                <span class="sr-only">{{currentDonate}}元</span>
            </div>
        </div>
    </div>
    <div class="rank well">
        <span class="donate-name">站内月榜</span>
        <div class="donate-rank">
            {{#monthRank}}
                <a href="{{userUrl}}" class="mw-userlink" rel="nofollow">{{{userAvatar}}}</a>
            {{/monthRank}}
            {{^hiddenMonth}}
                <a href="{{moreMonthLink}}" class="more">&gt;&gt;</a>
            {{/hiddenMonth}}
            {{^monthRank}}
            {{/monthRank}}<br>
        </div>
        <br>
        <span class="donate-name">站内总榜</span>
        <div class="donate-rank">
            {{#totalRank}}
                <a href="{{userUrl}}" class="mw-userlink" rel="nofollow">{{{userAvatar}}}</a>
            {{/totalRank}}
            {{^hiddenTotal}}
                <a href="{{moreTotalLink}}" class="more">&gt;&gt;</a>
            {{/hiddenTotal}}
            {{^totalRank}}
                <li>暂无排名~</li>
            {{/totalRank}}
        </div>
    </div>
    </div>
    
    <div class="content">
        <form action="/wiki/特殊:Donate" class="alipayform" method="post">
            <div class="element">
                <div class="einput"><input type="hidden" name="WIDout_trade_no" id="out_trade_no" value="{{tradeNum}}"></div>
            </div>
            
            <div class="element">
                <div class="einput"><input type="hidden" name="WIDsubject" value="huiji加油" ></div>
            </div>
            <div class="element">
                <div class="einput"><span>我要加油: </span><input type="text" class="num" name="WIDtotal_fee" value="5">.00元</div>
            </div>
            <div class="element text-center">
                <button class="alisubmit mw-ui-button mw-ui-progressive" >
                    加油
                    <img src="http://fs.huijiwiki.com/www/resources/assets/alipay.png" width="20">
                </button>
            </div>
            <div class="element text-center">
                <div class="einput"><input type="{{type}}" name="WIDbody" value="1">
                    <span class="etitle" style="display:{{display}}">匿名</span>
                </div>
            </div>
        </form>

    </div>
</div>