<div class="hj-media">
	<div class="hj-media-avatar hidden-sm hidden-xs">
		{{{userAvatar}}}
	</div>
	<div class="hj-media-body">
		<div class="hj-media-user">
			<span class="small-avatar hidden-md hidden-lg">{{{userAvatar}}}</span>{{{reason}}}
			<p class="time-ago pull-right hidden-sm hidden-xs">{{{timestamp}}}</p>
		</div>
		<div class="hj-media-user hj-media-title">
			{{{title}}}
		</div>
		<div class="hj-media-comment">
			<div class="hj-media">
				{{#image}}
				<div class="pull-left" style="background-img:url({{{image}}})">		
				</div>
				{{/image}}
				<p class="hj-media-body">
					{{{description}}}
				</p>
				{{#hasShowcase}}
				<div class="user-home-item-showcase">
					{{{showcase}}}
				</div>
				{{/hasShowcase}}
			</div>
		</div>
	</div>
</div>