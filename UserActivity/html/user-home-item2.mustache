<div class="useractivity2">
	<div class="hj-media-avatar">
		{{{userAvatar}}}
	</div>
	<div class="hj-media-body">
		<div class="hj-user">
			<div class="small-avatar">{{{userAvatar}}}</div><div class="reason">{{{reason}}}</div>
		</div>
		<div class="hj-media-title">
			{{{title}}}
		</div>
		<div class="hj-media-comment">
			
			{{#hasImage}}
			<div class="pull-left" style="background-image:url('{{{image}}}')">		
			</div>
			{{/hasImage}}
			
			{{{description}}}
			
			{{#hasShowcase}}
			<div class="user-home-item-showcase">
				{{{showcase}}}
			</div>
			{{/hasShowcase}}
			
		</div>
		<span class="time-ago pull-right"><a href="{{{editUrl}}}">编辑</a> | <a href="{{{sourceUrl}}}">源代码</a> | {{{timestamp}}}前</span>
	</div>
</div>