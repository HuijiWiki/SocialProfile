<div class="row admin-statistics">
    <div class="col-lg-3 col-md-6">
        <div class="panel panel-primary">
            <div class="panel-heading">
                <div class="row">
                    <div class="col-xs-3">
                        <i class="icon-trophy"></i>
                    </div>
                    <div class="col-xs-9 text-right">
                        <div class="huge">昨日评分{{siteScore}}</div>
                        <div>维基排名{{siteRank}}</div>
                    </div>
                </div>
            </div>
        </div>
    </div>
    <div class="col-lg-3 col-md-6">
        <div class="panel panel-primary">
            <div class="panel-heading">
                <div class="row">
                    <div class="col-xs-3">
                        <i class="icon-note"></i>
                    </div>
                    <div class="col-xs-9 text-right">
                        <div class="huge">昨日编辑{{yesterdayEdit}}</div>
                        <div>全部编辑{{totalEdit}}</div>
                    </div>
                </div>
            </div>
        </div>
    </div>
    <div class="col-lg-3 col-md-6">
        <div class="panel panel-primary">
            <div class="panel-heading">
                <div class="row">
                    <div class="col-xs-3">
                        <i class="icon-eye"></i>
                    </div>
                    <div class="col-xs-9 text-right">
                        <div class="huge">昨日浏览{{yesterdayView}}</div>
                        <div>历史浏览{{totalView}}</div>
                    </div>
                </div>
            </div>
        </div>
    </div>
    <div class="col-lg-3 col-md-6">
        <div class="panel panel-primary">
            <div class="panel-heading">
                <div class="row">
                    <div class="col-xs-3">
                        <i class="icon-user-follow"></i>
                    </div>
                    <div class="col-xs-9 text-right">
                        <div class="huge">昨日关注{{yesterdayCount}}</div>
                        <div>全部关注{{totalCount}}</div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>
<!-- /.row -->
